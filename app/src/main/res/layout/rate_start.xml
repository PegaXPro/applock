<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <View
            android:layout_width="0dp"
            android:layout_height="182dp"
            android:id="@+id/view30"
            android:background="@drawable/dialog_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" android:elevation="5dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="NOT REALLY"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/closeBt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/yesBt" app:layout_constraintStart_toStartOf="@+id/view30"
            app:layout_constraintBottom_toBottomOf="@+id/view30" android:layout_marginBottom="16dp"
            android:gravity="center" android:layout_marginStart="24dp" android:layout_marginEnd="16dp"
            android:textStyle="bold" android:elevation="5dp"/>

    <TextView
            android:text="YES"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/rate_us_back"
            android:id="@+id/yesBt"
            app:layout_constraintStart_toEndOf="@+id/closeBt"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/view30"
            app:layout_constraintTop_toTopOf="@+id/closeBt" android:gravity="center"
            android:layout_marginEnd="24dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/closeBt" android:textStyle="bold" android:elevation="5dp"/>

    <TextView
            android:text="Are you satisfied with using AppLock?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView28"
            app:layout_constraintStart_toStartOf="@+id/view30" app:layout_constraintEnd_toEndOf="@+id/view30"
            app:layout_constraintTop_toTopOf="@+id/view30" app:layout_constraintBottom_toTopOf="@+id/closeBt"
            android:layout_marginEnd="24dp" android:layout_marginStart="24dp" android:textSize="20sp"
            android:gravity="center" android:elevation="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>