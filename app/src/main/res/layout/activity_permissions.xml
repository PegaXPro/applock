<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinatorLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1">

        <View
            android:id="@+id/view24"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view25"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/poppins_regular"
            android:elevation="10dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="35dp"
            android:text="@string/permission"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view26"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view11"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_main_back" />

        <View
            android:id="@+id/view27"
            android:layout_width="0dp"
            android:layout_height="500dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view28" />

        <View
            android:id="@+id/view28"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/goBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/view24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view27"
            app:srcCompat="@drawable/ic_left_arrow" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/permission_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/grant_permission"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:maxHeight="100dp"
                app:srcCompat="@drawable/permission_img" />


            <TextView
                android:id="@+id/grant_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/perm1"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/grant_permission"
                android:textColor="@color/colorTextGray"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/perm1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_above="@+id/perm2"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_item_buck"
                android:elevation="3dp"
                android:paddingStart="10dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenir_medium"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/auto_start_p"
                            android:textColor="@color/colorTextGray"
                            android:textSize="18sp" />

                        <!--<androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4dp"
                            android:text="@string/permission_usage_access_description1"
                            android:fontFamily="@font/avenir_medium"
                            android:textSize="@dimen/text_size_small"
                            android:singleLine="true"
                            android:textColor="@color/colorTextGrayLight"/>-->

                    </LinearLayout>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/autoStartSw"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:clickable="false"
                        android:focusable="false"
                        app:lottie_rawRes="@raw/togle_comp" />


                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/perm2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_above="@+id/perm3"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_item_buck"
                android:elevation="3dp"
                android:paddingStart="10dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenir_medium"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/permission_usage_access_title"
                            android:textColor="@color/colorTextGray"
                            android:textSize="18sp" />

                        <!--<androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_4dp"
                                android:text="@string/permission_usage_access_description"
                                android:fontFamily="@font/avenir_medium"
                                android:textSize="@dimen/text_size_small"
                                android:singleLine="true"
                                android:textColor="@color/colorTextGrayLight"/>-->

                    </LinearLayout>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/switchUsageAccess"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:clickable="false"
                        android:focusable="false"
                        app:lottie_rawRes="@raw/togle_comp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/perm3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_above="@+id/textViewPrivacyPolicy"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_item_buck"
                android:elevation="3dp"
                android:paddingStart="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenir_medium"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/permission_overlay_title"
                            android:textColor="@color/colorTextGray"
                            android:textSize="18sp" />

                        <!--<androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_4dp"
                                android:text="@string/permission_overlay_description"
                                android:fontFamily="@font/avenir_medium"
                                android:textSize="@dimen/text_size_small"
                                android:singleLine="true"
                                android:textColor="@color/colorTextGrayLight"/>-->

                    </LinearLayout>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/switchOverlay"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:clickable="false"
                        android:focusable="false"
                        app:lottie_rawRes="@raw/togle_comp" />


                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/textViewPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonNext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:alpha="0.6"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/margin_8dp"
                android:singleLine="false"
                android:text="@string/you_accept_privacy_policy"
                android:textColor="@color/color_673AC8"
                android:textSize="@dimen/text_size_regular"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:background="@drawable/translate_now_back"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_bold"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/margin_8dp"
                android:text="@string/btn_ok"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>